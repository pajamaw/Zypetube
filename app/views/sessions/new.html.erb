<%= form_tag ('/sessions') do  %>
<div class="field">
    <%= label_tag 'username' %><br />
    <%= email_field_tag 'username' %>
  </div>

  <div class="field">
    <%= label_tag 'password' %><br />
    <%= password_field_tag 'password' %>
  </div>

  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>
<%= link_to "Sign out", '/sessions', :method => :delete %>
