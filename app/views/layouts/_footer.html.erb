
<footer class="footer-nav">
  <%if @page == '1'|| @page.nil? %>
    <a href="/videos/<%=2%>">
      <h1 id="right-paginate">Next Page --></h1>
    </a>
  <%else%>
    <li>
      <a href="/videos/<%=@page.to_i - 1%>">
        <h1 id="left-paginate"> <-- Previous Page </h1>
      </a>
    </li>
    <li>
      <h1 id="center-paginate">Current Page: <%=@page%></h1>
    </li>
    <li>
      <a href="/videos/<%=@page.to_i + 1%>">
        <h1 id="right-paginate">Next Page --></h1>
      </a>
    </li>
  <%end%>
</footer>
